{
  "version": 2,
  "builds": [
    { 
      "src": "api/index.ts", 
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["**"]
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist/public" }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "env": {
    "DATABASE_URL": "@database_url"
  }
}

